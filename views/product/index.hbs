{{#section 'title'}} Dashboard - Products {{/section}} {{#if layoutVM.curUser.isAdmin}}
<table class="table table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Tên</th>
			<th>Loại</th>
			<th>Hiệu</th>
			<th>Tóm tắt</th>
			<th>Chi tiết</th>
			<th>Giá</th>
			<th>Còn</th>
			<th class="col-md-1">&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		{{#each products}}
		<tr>
			<td>{{proID}}</td>
			<td>{{proName}}</td>
			<td>{{catID}}</td>
			<td>{{proBrand}}</td>
			<td>{{proInfo}}</td>
			<td>{{proDetail}}</td>
			<td>{{proPrice}}</td>
			<td>{{proQuantity}}</td>
			<td class="text-right">
				<a class="btn btn-danger btn-xs" href="/product/delete?id={{proID}}" role="button">
					<span class="glyphicon glyphicon-remove"></span>
				</a>
				<a class="btn btn-primary btn-xs" href="/product/edit?id={{proID}}" role="button">
					<span class="glyphicon glyphicon-wrench"></span>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
<a class="btn btn-large btn-block btn-primary" href="#" role="button">
	<span class="glyphicon glyphicon-plus"></span>
	Thêm sản phẩm mới
</a>
{{/if}}